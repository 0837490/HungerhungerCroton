<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space5"
    android:background="?android:attr/selectableItemBackground"
    android:backgroundTint="@color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="@dimen/margin_80dp"
                android:layout_height="@dimen/margin_80dp"
                android:src="@drawable/ab" />

            <TextView
                android:id="@+id/txproductname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10"
                android:layout_marginTop="@dimen/space10"
                android:layout_toRightOf="@+id/image"
                android:text="Sneksh"
                android:textColor="@color/darkblack"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txproductdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txproductname"
                android:layout_marginLeft="@dimen/space10"
                android:layout_toRightOf="@+id/image"
                android:text="2 Naal with butter , salad ,2 Sabji ,Rayta , Rise"
                android:textColor="@color/darkblack"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivswipe"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center|right"
            android:layout_weight="0.1"
            android:src="@drawable/swipe"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>