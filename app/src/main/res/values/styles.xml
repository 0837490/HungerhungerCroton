<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AnimationUpPopup">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>

    <style name="AnimationFromButtom" >
        <item name="android:windowEnterAnimation">@anim/popup_form_bottom</item>
        <item name="android:windowExitAnimation">@anim/drop_down_to_bottom</item>
    </style>

    <style name="AnimationFromTop" >
        <item name="android:windowEnterAnimation">@anim/drop_down_from_top</item>
        <item name="android:windowExitAnimation">@anim/hide_to_top</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:textSize">@dimen/txt_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/space20</item>
        <item name="android:paddingRight">@dimen/space20</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
    </style>
    <style name="Buttongreen">
        <item name="android:textSize">@dimen/txt_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/space20</item>
        <item name="android:paddingRight">@dimen/space20</item>
        <item name="android:background">@drawable/btn_green_selector</item>
    </style>
    <style name="ButtonTransparent">
        <item name="android:textSize">@dimen/txt_btn</item>
        <item name="android:textColor">@color/textParagraph</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/space20</item>
        <item name="android:paddingRight">@dimen/space20</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="PickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryText</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlActivated">@color/hint_color</item>
    </style>
    <style name="Hint">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CheckboxStyle" parent="AppTheme">
        <item name="colorAccent">@color/black</item>  // for checked
        <item name="android:textColorSecondary">@color/black</item>  // for unchecked
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>
</resources>
